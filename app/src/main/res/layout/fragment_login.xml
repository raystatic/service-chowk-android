<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/athens_gray"
    android:orientation="vertical"
    android:layout_gravity="center_vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/athens_gray"
            android:paddingTop="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back"
                android:id="@+id/imgBack"
                android:padding="10dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@+id/imgBack"
                android:layout_centerVertical="true"/>


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:id="@+id/linPhone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/danger"
                android:drawableLeft="@drawable/ic_baseline_error_outline_24"
                android:drawablePadding="5dp"
                android:visibility="gone"
                android:id="@+id/tvError"
                android:layout_marginBottom="10dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_bg"
                android:padding="10dp"
                android:id="@+id/relPhone">


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:inputType="number"
                    android:layout_toEndOf="@+id/tvCode"
                    android:background="@drawable/et_bg"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:focusable="true"
                    android:clickable="true"
                    android:id="@+id/etPhone"
                    android:hint="Enter phone number"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+91"
                    android:textStyle="bold"
                    android:id="@+id/tvCode"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"/>

            </RelativeLayout>

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundTint="@color/chateau_green"
                android:text="Next"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/btnNext"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"/>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingStart="32dp"
            android:paddingEnd="32dp">

            <com.servicechowk.app.other.OtpEditText
                android:id="@+id/et_otp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="false"
                android:digits="1234567890"
                android:inputType="number"
                android:maxLength="4"
                android:textIsSelectable="false"
                android:textSize="30sp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Otp sent to +91 9650124756"
                android:textColor="@color/black"
                android:layout_below="@+id/et_otp"
                android:layout_marginTop="20dp"/>

        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>